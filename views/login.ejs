<!DOCTYPE html>
<html lang="en">
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>登录</title>
    <link rel="shortcut icon" type="image/x-icon" href="/images/police.png"/>
</head>

<body>
<input type="text" placeholder="请输入用户名" name="userName" id="userName">
<input type="password" placeholder="请输入密码" name="password" id="password" autocomplete="off">
<input type="button" class="btn btn-success btn-lg btn-block" id="sub" value="登录">
<script type="text/javascript" src="/lib/jquery-1.7.2.min.js"></script>
<script type="text/javascript">

    $('#sub').on('click', function() {
        signup();
    });
    $('input').on('keyup', function(e) {
        e = e || window.event;
        if(e.keyCode === 13) {
            signup();
        }
    });
    function signup() {
        var userInfo = {
            userName: $('#userName').val(),
            password: $('#password').val(),
            type: "1"
        };
        var si = $.getJSON('/PBD/login/',userInfo);
        si.then(function(json) {
            if(json.resultCode === '200') {
                window.location.href = '/';
            } else {
            }
        });
    }
</script>
</body>
</html>
